# Copy this file to .env and fill in your values.
# .env is git-ignored and never committed.

# ---------------------------------------------------------------------------
# Schedule
# ---------------------------------------------------------------------------

# Standard 5-field CRON expression for when to run speed tests.
# Default: every hour at minute 0.
SPEEDTEST_CRON=0 * * * *

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------

# Path inside the container (mapped to the 'data' Docker volume).
DB_PATH=/data/speedtest.db

# Days to retain results. Set to 0 to keep data indefinitely.
DB_RETENTION_DAYS=90

# ---------------------------------------------------------------------------
# Dashboard
# ---------------------------------------------------------------------------

DASHBOARD_PORT=8080
DASHBOARD_REFRESH_SECONDS=60

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

# DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

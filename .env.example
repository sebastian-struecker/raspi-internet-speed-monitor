# Copy this file to .env and fill in your values.
# .env is git-ignored and never committed.

# ---------------------------------------------------------------------------
# Schedule
# ---------------------------------------------------------------------------

# Standard 5-field CRON expression for when to run speed tests.
# Default: every hour at minute 0.
SPEEDTEST_CRON=0 * * * *

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------

# Path inside the container (mapped to the 'data' Docker volume).
DB_PATH=/data/speedtest.db

# Days to retain results. Set to 0 to keep data indefinitely.
DB_RETENTION_DAYS=90

# ---------------------------------------------------------------------------
# Google Sheets export
# ---------------------------------------------------------------------------

# Set to false to disable Google Sheets export entirely.
GOOGLE_SHEETS_ENABLED=true

# The ID from your Google Sheet URL:
#   https://docs.google.com/spreadsheets/d/<SPREADSHEET_ID>/edit
GOOGLE_SHEETS_SPREADSHEET_ID=

# Paste the entire contents of your service account JSON key here,
# on a single line (all whitespace collapsed).
# Example:
#   GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"my-project",...}
GOOGLE_SERVICE_ACCOUNT_JSON=

# ---------------------------------------------------------------------------
# Dashboard
# ---------------------------------------------------------------------------

DASHBOARD_PORT=8080
DASHBOARD_REFRESH_SECONDS=60

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

# DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

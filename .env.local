# Local development environment
# This file is git-ignored and used automatically by docker-compose.override.yml

# ---------------------------------------------------------------------------
# Schedule
# ---------------------------------------------------------------------------

SPEEDTEST_CRON=0 * * * *

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------

DB_PATH=/data/speedtest.db
DB_RETENTION_DAYS=90

# ---------------------------------------------------------------------------
# Dashboard
# ---------------------------------------------------------------------------

DASHBOARD_PORT=8080
DASHBOARD_REFRESH_SECONDS=60

# URL prefix - leave empty for local development
URL_PREFIX=

# ---------------------------------------------------------------------------
# Network - local development uses auto-created network
# ---------------------------------------------------------------------------

NETWORK_EXTERNAL=false

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

LOG_LEVEL=INFO

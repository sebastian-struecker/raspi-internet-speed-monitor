# Production/Reverse Proxy Environment Configuration
# This file is used by docker-compose.prod.yml
# For local development, see .env.local (automatically used)

# ---------------------------------------------------------------------------
# Schedule
# ---------------------------------------------------------------------------

SPEEDTEST_CRON=*/30 * * * *

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------

DB_PATH=/data/speedtest.db
DB_RETENTION_DAYS=90

# ---------------------------------------------------------------------------
# Dashboard
# ---------------------------------------------------------------------------

DASHBOARD_PORT=8080
DASHBOARD_REFRESH_SECONDS=60

# URL prefix for reverse proxy routing
URL_PREFIX=/internet-speed-monitor

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

LOG_LEVEL=INFO
